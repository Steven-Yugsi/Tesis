<?xml version="1.0" encoding="utf-8" ?>
<FlyoutPage xmlns="http://xamarin.com/schemas/2014/forms"
            xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
            x:Class="Tesis.Views.MainFlyoutPage"
            BackgroundColor="#ADD8E6">

    <!-- Menú lateral (Flyout) -->
    <FlyoutPage.Flyout>
        <ContentPage Title="Menú"
                     BackgroundColor="#363636"
                     Padding="0">

            <StackLayout VerticalOptions="FillAndExpand" Spacing="20">

                <!-- Cabecera del perfil -->
                <Frame BackgroundColor="#D3D3D3"
                       HasShadow="True"
                       CornerRadius="0"
                       Padding="20">
                    <StackLayout>
                        <Image Source="user_placeholder.png"
                               HeightRequest="80"
                               WidthRequest="80"
                               HorizontalOptions="Center"
                               VerticalOptions="Center"
                               Margin="0,0,0,10"/>
                        <Label Text="{Binding UsuarioCompleto}"
                               FontSize="18"
                               FontAttributes="Bold"
                               TextColor="#FFFFFF"
                               HorizontalTextAlignment="Center"/>
                    </StackLayout>
                </Frame>

                <!-- Opciones del menú -->
                <StackLayout Padding="10" Spacing="15">
                    <Button Text="Inicio"
                            Command="{Binding GoToHomePageCommand}"
                            BackgroundColor="Transparent"
                            TextColor="#FFFFFF"
                            HorizontalOptions="Start"
                            FontSize="16"
                            FontAttributes="Bold"/>

                    <Button Text="Perfil"
                            Command="{Binding ShowProfileCommand}"
                            BackgroundColor="Transparent"
                            TextColor="#FFFFFF"
                            HorizontalOptions="Start"
                            FontSize="16"
                            FontAttributes="Bold"/>
                    <Button Text="Administrar Roles"
                            Command="{Binding ShowRolesCommand}"
                            BackgroundColor="Transparent"
                            TextColor="#FFFFFF"
                            HorizontalOptions="Start"
                            FontSize="16"
                            FontAttributes="Bold" />

                    <Button Text="Administrar Usuarios"
                            Command="{Binding ShowUserListCommand}"
                            BackgroundColor="Transparent"
                            TextColor="#FFFFFF"
                            HorizontalOptions="Start"
                            FontSize="16"
                            FontAttributes="Bold" />

                    <Button Text="Configuración"
                            BackgroundColor="Transparent"
                            TextColor="#FFFFFF"
                            HorizontalOptions="Start"
                            FontSize="16"
                            FontAttributes="Bold"/>

                    <Button Text="Cerrar sesión" 
                            Clicked="OnLogoutClicked" 
                            BackgroundColor="#FF5252" 
                            TextColor="#FFFFFF" 
                            Padding="10"
                            FontSize="16"
                            FontAttributes="Bold"/>
                </StackLayout>
            </StackLayout>
        </ContentPage>
    </FlyoutPage.Flyout>

